  <div class="toast" id="toast">Tersalin ke clipboard!</div>

  <script>
    // Template pesan netral (bahasa Portugis sederhana) â€” tidak menuduh.
    function buildMessage(number){
      const phoneText = number ? number : "[nomor]";
      return `Quero reportar a conta do WhatsApp com o nÃºmero ${phoneText}. Solicito que os desenvolvedores/investigadores verifiquem atividades suspeitas associadas a esta conta e tomem as medidas apropriadas, se necessÃ¡rio. Obrigado.`;
    }

    const copyBtn = document.getElementById('copyBtn');
    const phoneInput = document.getElementById('phone');
    const toast = document.getElementById('toast');

    copyBtn.addEventListener('click', async () => {
      const num = phoneInput.value.trim();
      const msg = buildMessage(num);

      try {
        await navigator.clipboard.writeText(msg);
        showToast('Teks berhasil disalin âœ…');
      } catch (e) {
        // fallback untuk browser lama
        const ta = document.createElement('textarea');
        ta.value = msg;
        document.body.appendChild(ta);
        ta.select();
        try {
          document.execCommand('copy');
          showToast('Teks berhasil disalin (fallback) âœ…');
        } catch (err) {
          alert('Gagal menyalin. Silakan salin manual:\n\n' + msg);
        }
        document.body.removeChild(ta);
      }
    });

    function showToast(text){
      toast.textContent = text;
      toast.style.display = 'block';
      setTimeout(()=>{ toast.style.opacity = '1'; }, 10);
      setTimeout(()=>{ toast.style.opacity = '0'; }, 1700);
      setTimeout(()=>{ toast.style.display = 'none'; }, 2200);
    }
  </script>
